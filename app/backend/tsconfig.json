{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,                     
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".", 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./node_module/@types",
      "./src/@types/express"
    ],
    "types": [
      "mocha",
    ],
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"]
}